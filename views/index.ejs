<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <!-- tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Titel of the note" name="title">
                <textarea class="block w-full rounded outline-none resize-none mt-2 px-5 py-2 bg-zinc-800" placeholder="Write your task details" name="details"></textarea>
                <input class="mt-2 bg-blue-600 rounded px-5 py-2" type="submit" value="Create task ">
            </form>
        </div>

        <div class="tasks flex gap-4 flex-wrap p-10">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded">
                        <h1 class="text-white text-3xl tracking-tighter "><%= val %> </h1>
                        <div class=" flex w-full justify-between items-center mt-5">
                            <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read more. </a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">edit file name</a>
                        </div>
                    </div>
                <% }) %>
            <% } else{ %>
                <h3 class="text-zinc-600">No tasks yet</h3>
            <% } %>
           

        </div>
    </div>
</body>
</html>